<xs:schema  
  
  xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <!-- test derivation by restriction
       load this xsd and create a root object of type testRestrictionType
       this contains two elements, author and character, which are derived from basePerson
       we will test that we can get to the extended properties author->dead and character->qualification
       The basic example comes from Chapter 7 of http://examples.oreilly.com/xmlschema/
       -->
  
  <xs:element name="testRestriction" type="testRestrictionType"/>
  
  <xs:complexType name="basePerson" abstract="true">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="born" type="xs:string"/>
      <xs:element name="dead" type="xs:string" minOccurs="0"/>
      <xs:element name="qualification" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="testRestrictionType">
    <xs:element name="testRestriction">
      <xs:element name="author">
        <xs:complexType>
          <xs:complexContent>
            <xs:restriction base="basePerson">
              <xs:sequence>
                <xs:element name="name" type="xs:string"/>
                <xs:element name="born" type="xs:string"/>
                <xs:element name="dead" type="xs:string" minOccurs="0"/>
              </xs:sequence>
            </xs:restriction>
          </xs:complexContent>
        </xs:complexType>
      </xs:element>
      <xs:element name="character">
        <xs:complexType>
          <xs:complexContent>
            <xs:restriction base="basePerson">
              <xs:sequence>
                <xs:element name="name" type="xs:string"/>
                <xs:element name="born" type="xs:string"/>
                <xs:element name="qualification" type="xs:string"/>
              </xs:sequence>
            </xs:restriction>
          </xs:complexContent>
        </xs:complexType>
      </xs:element>
    </xs:element>
  </xs:complexType>
  

</xs:schema>
  